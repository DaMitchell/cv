<span class="prompt">user@cv [<span class="time">{{hh}}:{{mm}}:{{ss}}</span>]&gt;&nbsp;</span>
<span class="input">
    <span class="before-cursor">{{beforeCursor}}</span>
    {{#if enabled}}
    <span class="cursor enabled">{{{cursor}}}</span>
    {{else}}
    <span class="cursor">{{{cursor}}}</span>
    {{/if}}
    <span class="after-cursor">{{afterCursor}}</span>
</span>
<div class="clipboard"><input type="text" class="clipboard-input"/></div>
